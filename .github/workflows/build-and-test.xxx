name: Build and test minimial_f2py_package on github actions

on: push

jobs:
  build-and-test:
    name: ${{ matrix.os }} py${{ matrix.python-version }}
    runs-on: ${{ matrix.os }}
    defaults:
      run:
        shell: bash -l {0}
    strategy:
      fail-fast: false
      matrix:
        python-version: ["3.7", "3.8"]
        os: ["ubuntu-latest", "macos-latest", ]
        include:
          - os: ubuntu-latest
            environment-file: ci/requirements-linux.yml
          - os: macos-latest
            environment-file: ci/requirements-macos.yml

    steps:
      - uses: actions/checkout@v2
      - uses: conda-incubator/setup-miniconda@v2
        with:
          activate-environment: test_env
          python-version: ${{ matrix.python-version }}
          environment-file: ${{ matrix.environment-file }}
          miniforge-version: latest
          auto-update-conda: false
          use-only-tar-bz2: true
      - name: Build and install
        run: |
          python -m pip install --no-deps -e .
      - name: Import minimal_f2py_package
        run: |
          python -c "import minimal_f2py_package"
      - name: Run tests
        run: |
          pytest -v --pyargs minimal_f2py_package.tests
